<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Mobile Specific Meta -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Favicon -->
    <link rel="shortcut icon" href="{{ url_for( 'static', filename='victus.jpeg' ) }}">
    <!-- Author Meta -->
    <meta name="author" content="Kunal Dhavale">
    <!-- Meta Description -->
    <meta name="description" content="A Machine Learning web-application built and deployed by Kunal Dhavale">
    <!-- Meta Keyword -->
    <meta name="keywords" content="Health Assessment Web-Application">
    <!-- meta character set -->
    <meta charset="UTF-8">
    <!-- Site Title -->
    <title>Multiple Disease Prediction</title>

    <link rel="stylesheet" href="https://cdn.linearicons.com/free/1.0.0/icon-font.min.css">
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,400,300,500,600,700" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


    <!-- CSS -->

    <link rel="stylesheet" href="../static/kidney.css">

</head>

<body>

    <!-- PreLoader -->

    <section id="loading">
        <div class="loader">
            <div class="inner one"></div>
            <div class="inner two"></div>
            <div class="inner three"></div>
            <div class="loading-text">Loading...</div>
        </div>
    </section>

    <!-- Main -->

    <section id="Main">
        <a href="{{ url_for('index') }}">
            <h3>.1mg</h3>
        </a>
        <div>
            <ul id="navbar">
                <li><a href="{{ url_for('overview') }}">OVERVIEW</a></li>
                <li><a href="{{ url_for('diabetes') }}">DIABETES</a></li>
                <li><a href="{{ url_for('heart') }}">HEART</a></li>
                <li><a class="active" href="{{ url_for('kidney') }}">KIDNEY</a></li>
                <li><a href="https://github.com/KunalDhavale/Health-Assessment-System"><button class="btn success">CODE</button></a></li>
            </ul>
        </div>
    </section>


    <section id="heading">
        <div class="container">
            <h2>Kidney Disease Prediction</h2>
            <p>Please enter the patient details</p>
        </div>


        <!-- Text Area -->

        <center>
            <div class="ml-container">
                <form action="{{ url_for('kidney_predict') }}" method="POST">

                        <input class="form-input" type="text" name="specific_gravity" placeholder="Specific Gravity"
                            required autocomplete="off"><br>
                        <input class="form-input" type="text" name="albumin" placeholder="Albumin (0, 1, 2, 3, 4, 5)"
                            required autocomplete="off"><br>
                        <input class="form-input" type="text" name="red_blood_cells"
                            placeholder="Red Blood Cells (0: Abnormal; 1: Normal)" required autocomplete="off"><br>
                        <input class="form-input" type="text" name="pus_cell"
                            placeholder="Pus Cell (0: Abnormal; 1: Normal)" required autocomplete="off"><br>

                        <input class="form-input" type="text" name="haemoglobin" placeholder="Haemoglobin (in gms)"
                            required autocomplete="off"><br>
                        <input class="form-input" type="text" name="hypertension"
                            placeholder="Hypertension (0: No; 1: Yes)" required autocomplete="off"><br>
                        <input class="form-input" type="text" name="diabetes_mellitus"
                            placeholder="Diabetes Mellitus (0: No; 1: Yes)" required autocomplete="off"><br>
                        <input class="form-input" type="text" name="appetite" placeholder="Appetite (0: Good; 1: Poor)"
                            required autocomplete="off"><br>

                        <input type="submit" class="my-cta-button" value="Predict">

                </form>
            </div>
        </center> 

    </section> 


    <!-- Footer -->


    <footer id="Footer">

        <div class="footer">
            <h3> Multiple Disease Prediction </h3>
            <p> .1mg an health assessment web-application </p>

            <ul class="socials">
                <li><a target="_blank" href="https://github.com/KunalDhavale"><i class="fa fa-github"></i></a></li>
                <li><a target="_blank" href="https://www.linkedin.com/in/kunaldhavale/"><i
                            class="fa fa-linkedin-square"></i></a></li>
            </ul>
        </div>

        <div class="last">
            <p>A Machine learning health assessment web-application, build with flask & deployed using Render</p>
        </div>

    </footer>


    <script>

        var preloader = document.getElementById('loading');

        window.addEventListener("load", function () {
            preloader.style.display = "none";
        })

    </script>

</body>

</html>